<section id="administrator-index" class="container">
<div class="page-header">
  <h1>Administrator</h1>
</div>

  <%= form_tag administrators_path, :method=>"GET", :remote => true  do  %>

    <div class="form-group input-group">
      <%= text_field_tag 'search', nil, :placeholder => 'Enter search term...', :class => "form-control" %>
      <span class="input-group-btn">
        <%= submit_tag "Pesquisar", :class=>"btn btn-default" %>
      </span>
    </div>

  <% end %>

  <p class="text-right"><strong>Total administrator:</strong> <%= @administrators.size %></p>

  <div id="administrator-list">
    <%= render "list"%>
  </div>



  <div class="well clearfix">
    <%= link_to :New, new_administrator_path, :class => "btn btn-success btn-lg pull-right" %>
  </div>
</section>