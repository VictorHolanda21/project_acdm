<section class="container">
<div class="page-header">
	<h1>Category</h1>
</div>

	<%= form_tag categories_path, :method=>"GET", :remote => true  do  %>

    <div class="form-group input-group">
    	<%= text_field_tag 'search', nil, :placeholder => 'Enter search term...', :class => "form-control" %>
      <span class="input-group-btn">
      	<%= submit_tag "Pesquisar", :class=>"btn btn-default" %>
      </span>
    </div>

	<% end %>

	<p class="text-right"><strong>Total Categories:</strong><%= @categories.size%></p>


	<div id="category-list">
		<%= render "list"%>
	</div>

	<% if !current_user.student? %>
		<div class="well clearfix">
			<%= link_to :New, new_category_path, :class => "btn btn-success btn-lg pull-right" %>
		</div>
	<% end %>
</section>